---
export interface Props {
  activeTab?: string;
}

const { activeTab = "home" } = Astro.props;
---

<nav class="floating-nav">
    <a href="/" class={activeTab === "home" ? "active" : ""}>Home</a>
    <a href="/overview" class={activeTab === "docs" ? "active" : ""}>Docs</a>
    <a href="/model-hub" class={activeTab === "model-hub" ? "active" : ""}>Model Hub</a>
    <!-- <a href="/blog" class={activeTab === "blog" ? "active" : ""}>Blog</a> -->
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
    </button>
</nav>

<style>
    .floating-nav {
        position: fixed !important;
        top: 20px !important;
        left: 50% !important;
        transform: translateX(-50%) !important;
        background: rgba(0, 0, 0, 0.8) !important;
        padding: 1rem 2rem !important;
        border-radius: 50px !important;
        display: flex !important;
        gap: 2rem !important;
        backdrop-filter: blur(10px) !important;
        border: 1px solid #98cbf9 !important;
        z-index: 1000 !important;
        width: auto !important;
        max-width: 90% !important;
    }

    .floating-nav a {
        color: #98cbf9;
        text-decoration: none;
        font-family: "Press Start 2P", cursive;
        font-size: 0.8rem;
        transition: all 0.3s ease;
    }

    .floating-nav a:hover,
    .floating-nav a.active {
        color: #ffffff;
        text-shadow: 0 0 10px #98cbf9;
    }

    .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        flex-direction: column;
        justify-content: space-between;
        height: 24px;
        padding: 0;
    }

    .mobile-menu-toggle span {
        display: block;
        height: 3px;
        width: 25px;
        background-color: #98cbf9;
        border-radius: 3px;
    }

    @media (max-width: 768px) {
        .floating-nav {
            padding: 0.8rem 1.5rem;
            justify-content: space-between;
            width: 90%;
        }

        .floating-nav a {
            font-size: 0.6rem;
        }
    }

    @media (max-width: 580px) {
        .floating-nav a:not(.active) {
            display: none;
        }

        .mobile-menu-toggle {
            display: flex;
        }

        .floating-nav.open {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            border-radius: 15px;
        }

        .floating-nav.open a {
            display: block;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.querySelector('.mobile-menu-toggle');
        const nav = document.querySelector('.floating-nav');
        
        if (menuToggle && nav) {
            menuToggle.addEventListener('click', () => {
                nav.classList.toggle('open');
            });
        }
    });
</script> 