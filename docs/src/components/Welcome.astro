<style>
    .container {
        background: #202020;
        min-height: 100vh;
        color: #98cbf9;
        font-family: "VT323", monospace;
        padding: 2rem;
        position: relative;
    }

    .big-logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
        animation: floating 3s ease-in-out infinite;
    }

    @keyframes floating {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }

    .hero {
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        padding-top: 40px;
        margin-bottom: 100px;
    }

    .terminal {
        background: #000;
        padding: 2rem;
        border-radius: 10px;
        border: 2px solid #98cbf9;
        width: 80%;
        max-width: 800px;
        box-shadow: 0 0 20px rgba(152, 203, 249, 0.2);
    }

    .terminal-header {
        display: flex;
        gap: 8px;
        margin-bottom: 1rem;
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .red {
        background: #ff5f56;
    }
    .yellow {
        background: #ffbd2e;
    }
    .green {
        background: #27c93f;
    }

    .terminal-content {
        font-family: "Press Start 2P", cursive;
        font-size: 2rem;
        text-align: center;
    }

    .typing-text {
        border-right: 4px solid #98cbf9;
        animation: blink 1s step-end infinite;
        white-space: normal;
        overflow-wrap: break-word;
    }

    .cards-section {
        padding-top: 60px;
        position: relative;
    }

    .cards-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        max-width: 800px;
        height: 2px;
        background: linear-gradient(to right, transparent, #98cbf9, transparent);
    }

    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 2rem;
    }

    .card {
        background: #000;
        border: 2px solid #98cbf9;
        border-radius: 8px;
        padding: 1.5rem;
        text-decoration: none;
        color: #98cbf9;
        transition: all 0.3s ease;
        transform-style: preserve-3d;
        position: relative;
    }

    .card:hover {
        transform: translateY(-10px) rotateX(5deg);
        box-shadow: 0 0 20px rgba(152, 203, 249, 0.3);
        border-color: #fff;
    }

    .pixel-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .card h3 {
        font-family: "Press Start 2P", cursive;
        font-size: 1.2rem;
        margin: 0.5rem 0;
    }

    .card p {
        font-size: 1.1rem;
        opacity: 0.8;
    }

    .scanlines {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.03) 50%,
            rgba(0, 0, 0, 0.03) 50%
        );
        background-size: 100% 4px;
        pointer-events: none;
    }

    @keyframes blink {
        0%,
        100% {
            border-color: #98cbf9;
        }
        50% {
            border-color: transparent;
        }
    }

    @media (max-width: 768px) {
        .big-logo-container svg {
            width: 300px;
            height: 240px;
        }
        
        .terminal-content {
            font-size: 1.5rem;
        }

        .hero {
            margin-bottom: 80px;
        }

        .cards-section {
            padding-top: 40px;
        }

        .cards {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }
    }

    @media (max-width: 580px) {
        .big-logo-container svg {
            width: 220px;
            height: 176px;
        }
        
        .terminal-content {
            font-size: 1.2rem;
        }

        .typing-text {
            display: inline-block;
            padding: 0 0.5rem;
        }
        
        .hero {
            margin-bottom: 60px;
        }

        .cards-section {
            padding-top: 30px;
        }

        .cards {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .card h3 {
            font-size: 1rem;
        }
    }

    @media (max-width: 400px) {
        .big-logo-container svg {
            width: 180px;
            height: 144px;
        }
        
        .terminal-content {
            font-size: 1rem;
        }
        
        .pixel-icon {
            font-size: 2.5rem;
        }
    }
</style>
